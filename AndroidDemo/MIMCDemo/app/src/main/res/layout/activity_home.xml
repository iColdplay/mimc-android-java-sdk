<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_normal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorPrimaryDark"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:id="@+id/ll_user_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:weightSum="1"
                        android:orientation="horizontal"
                        tools:ignore="RtlHardcoded">

                        <TextView
                            android:id="@+id/tv_user_name"
                            android:layout_width="0dp"
                            android:layout_weight="0.75"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="25dp"
                            android:layout_marginTop="50dp"
                            android:textAllCaps="false"
                            android:textColor="@color/colorWhite"
                            android:textSize="30sp" />

                        <ImageView
                            android:layout_gravity="right|bottom"
                            android:layout_marginBottom="10dp"
                            android:layout_width="0dp"
                            android:layout_weight="0.1"
                            android:id="@+id/image_qrcode"
                            android:src="@drawable/qrcode_red"
                            android:layout_height="20dp"/>

                        <ImageView
                            android:layout_gravity="left|bottom"
                            android:layout_marginBottom="10dp"
                            android:layout_marginEnd="10dp"
                            android:layout_width="0dp"
                            android:layout_weight="0.15"
                            android:id="@+id/image_scan"
                            android:src="@drawable/scan_red"
                            android:layout_height="20dp"/>

                    </LinearLayout>

                    <TextView
                        android:layout_marginTop="20dp"
                        android:layout_below="@id/ll_user_name"
                        android:text="最近联系人"
                        android:id="@+id/tv_recent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="25dp"
                        android:textAllCaps="false"
                        android:textColor="@color/colorWhite"
                        android:textSize="20sp" />

                    <com.daimajia.swipe.SwipeLayout
                        android:id="@+id/swipe_layout"
                        android:layout_marginStart="25dp"
                        android:layout_marginEnd="25dp"
                        android:background="@drawable/bg_shape_contact"
                        android:layout_below="@id/tv_recent"
                        android:layout_width="match_parent"
                        android:layout_height="50dp">
                        <!-- Bottom View Start-->
                        <LinearLayout
                            android:gravity="center"
                            android:background="#FFFFFF"
                            android:id="@+id/bottom_wrapper"
                            android:layout_width="80dp"
                            android:weightSum="1"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">
                            <!--What you want to show-->
                            <ImageView
                                android:id="@+id/delete"
                                android:src="@drawable/icon_delete"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>
                        <!-- Bottom View End-->

                        <!-- Surface View Start -->
                        <LinearLayout
                            android:id="@+id/ll_swipe_info"
                            android:gravity="center"
                            android:background="@color/colorPrimary"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <!--What you want to show in SurfaceView-->

                            <TextView
                                android:textColor="@color/colorWhite"
                                android:textSize="15sp"
                                android:textAllCaps="false"
                                android:id="@+id/tv_recent_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>
                        <!-- Surface View End -->
                    </com.daimajia.swipe.SwipeLayout>

                    <TextView
                        android:layout_below="@id/swipe_layout"
                        android:text="所有联系人"
                        android:id="@+id/tv_all"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="25dp"
                        android:textAllCaps="false"
                        android:textColor="@color/colorWhite"
                        android:textSize="20sp" />

                    <LinearLayout
                        android:gravity="center"
                        android:paddingTop="5dp"
                        android:layout_below="@id/tv_all"
                        android:id="@+id/ll_contact_list"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_marginTop="5dp"
                            android:visibility="visible"
                            android:text="暂无联系人, 点击添加"
                            android:textColor="@color/colorWhite"
                            android:textSize="15sp"
                            android:textAllCaps="false"
                            android:id="@+id/tv_no_contact"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/rv_contact_list"
                            android:layout_marginTop="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            tools:listitem="@layout/item_name_sn" />
                    </LinearLayout>
                </RelativeLayout>
            </ScrollView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_login"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorPrimaryDark"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:gravity="center"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/et"
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:background="@color/colorWhite"
                    android:textAlignment="center" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_login"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:gravity="center"
                android:text="@string/login"
                android:textAllCaps="false"
                android:textColor="@color/colorWhite"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_initializing"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorPrimaryDark"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="visible">

            <ProgressBar
                android:layout_width="88dp"
                android:layout_height="88dp"
                android:layout_gravity="center"
                android:indeterminateDrawable="@drawable/anim_progress"
                android:indeterminateDuration="1000" />

            <TextView
                android:id="@+id/tv_status_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/firmware_initializing"
                android:textColor="@color/colorText"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>

</layout>