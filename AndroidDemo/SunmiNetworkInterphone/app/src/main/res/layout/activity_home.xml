<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <RelativeLayout
        android:background="@color/design_background"
        android:id="@+id/rl_father"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.xiaomi.mimcdemo.ui.CustomScrollView
            android:id="@+id/scroll_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:id="@+id/rl_in_scroll_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="44dp"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tv_user_title"
                        android:layout_width="wrap_content"
                        android:layout_height="28dp"
                        android:text="前台招待小娜"
                        android:textColor="#fff1f1f1"
                        android:textSize="20sp" />

                    <ImageView
                        android:layout_marginStart="6dp"
                        android:layout_gravity="center"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@mipmap/ic_edit_nor"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/btn_set_custom_key"
                    android:layout_alignParentRight="true"
                    android:layout_marginEnd="24dp"
                    android:layout_marginTop="61dp"
                    android:layout_width="60dp"
                    android:layout_height="16dp"
                    android:text="设置对讲键"
                    android:textColor="#ccffffff"
                    android:textSize="12sp"
                    tools:ignore="RtlHardcoded" />

                <LinearLayout
                    android:gravity="center"
                    android:background="@drawable/ll_id_info_bg"
                    android:id="@+id/ll_id_info"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="80dp"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:ignore="RtlHardcoded">
                    <ImageView
                        android:layout_marginTop="4dp"
                        android:layout_marginStart="6dp"
                        android:layout_marginBottom="4dp"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:src="@mipmap/sunmi_qr_image"/>
                    <TextView
                        android:layout_marginStart="4dp"
                        android:layout_marginEnd="6dp"
                        android:id="@+id/tv_id_info"
                        android:layout_width="wrap_content"
                        android:layout_height="16dp"
                        android:textColor="#fff1f1f1"
                        android:textSize="12sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_contact_list"
                    android:layout_marginTop="124dp"
                    android:layout_marginStart="29dp"
                    android:layout_width="60dp"
                    android:layout_height="17dp"
                    android:text="联系人列表"
                    android:textColor="#99EDEDED"
                    android:textSize="12sp"
                    />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_contact_list"
                    android:layout_marginTop="141dp"
                    android:layout_marginStart="14dp"
                    android:layout_marginEnd="24dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

                <ImageView
                    android:id="@+id/image_no_contact"
                    android:src="@mipmap/no_contact"
                    android:layout_marginStart="130dp"
                    android:layout_marginTop="306dp"
                    android:layout_width="100dp"
                    android:layout_height="100dp"/>
                
                <TextView
                    android:id="@+id/tv_no_contact"
                    android:layout_marginStart="145dp"
                    android:layout_marginTop="418dp"
                    android:layout_width="70dp"
                    android:layout_height="20dp"
                    android:text="暂无联系人"
                    android:textColor="#ff565e6f"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/tv_add"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="24dp"
                    android:layout_marginTop="124dp"
                    android:layout_width="24dp"
                    android:layout_height="16dp"
                    android:text="添加"
                    android:textColor="#ffff6000"
                    android:textSize="12sp" />

                <ImageView
                    android:id="@+id/vertical_divider"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="59dp"
                    android:layout_marginTop="124dp"
                    android:background="@drawable/vertical_divider_item"
                    android:layout_width="1dp"
                    android:layout_height="16dp"/>

                <TextView
                    android:id="@+id/tv_modify"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="71dp"
                    android:layout_marginTop="124dp"
                    android:layout_width="24dp"
                    android:layout_height="16dp"
                    android:text="编辑"
                    android:textColor="#99EDEDED"
                    android:textSize="12sp" />

                <TextView
                    android:gravity="center"
                    android:text="取消"
                    android:textColor="#fff1f1f1"
                    android:textSize="16sp"
                    android:visibility="invisible"
                    android:background="@drawable/design_modify_grey_background"
                    android:id="@+id/tv_modify_cancel"
                    android:layout_marginTop="640dp"
                    android:layout_marginStart="24dp"
                    android:layout_width="150dp"
                    android:layout_height="44dp"/>

                <TextView
                    android:gravity="center"
                    android:text="删除"
                    android:textColor="#ffff6000"
                    android:textSize="16sp"
                    android:visibility="invisible"
                    android:background="@drawable/design_modify_orange_background"
                    android:id="@+id/tv_modify_confirm"
                    android:layout_marginTop="640dp"
                    android:layout_marginStart="186dp"
                    android:layout_width="150dp"
                    android:layout_height="44dp"/>

            </RelativeLayout>
        </com.xiaomi.mimcdemo.ui.CustomScrollView>
    </RelativeLayout>

</layout>