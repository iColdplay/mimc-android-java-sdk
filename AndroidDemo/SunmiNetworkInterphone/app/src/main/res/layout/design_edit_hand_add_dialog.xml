<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="312dp"
        android:layout_height="284dp"
        android:layout_gravity="center"
        android:background="@drawable/design_dialog_background">

        <TextView
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginTop="24dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:text="手动添加"
            android:textColor="#ff333c4f"
            android:textSize="16sp"
            />

        <TextView
            android:layout_marginStart="24dp"
            android:layout_marginTop="12dp"
            android:layout_width="264dp"
            android:layout_height="18dp"
            android:text="联系人昵称"
            android:textColor="#ff333c4f"
            android:textSize="12sp"
            />

        <LinearLayout
            android:background="@drawable/design_edit_ll_background"
            android:gravity="center"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_height="44dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginTop="4dp"
            android:layout_width="264dp">

            <EditText
                android:background="@null"
                android:id="@+id/et_user_name"
                android:layout_width="240dp"
                android:layout_height="match_parent"
                android:layout_marginStart="12dp"
                android:layout_marginTop="11dp"
                android:layout_marginEnd="12dp"
                android:layout_marginBottom="11dp"
                android:hint="请输入"
                android:textColor="#ff565e6f"
                android:textSize="12sp" />

        </LinearLayout>

        <TextView
            android:layout_marginStart="24dp"
            android:layout_marginTop="12dp"
            android:layout_width="264dp"
            android:layout_height="18dp"
            android:text="联系人ID"
            android:textColor="#ff333c4f"
            android:textSize="12sp"
            />

        <LinearLayout
            android:background="@drawable/design_edit_ll_background"
            android:gravity="center"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_height="44dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginTop="4dp"
            android:layout_width="264dp">

            <EditText
                android:background="@null"
                android:id="@+id/et_user_id"
                android:layout_width="240dp"
                android:layout_height="match_parent"
                android:layout_marginStart="12dp"
                android:layout_marginTop="11dp"
                android:layout_marginEnd="12dp"
                android:layout_marginBottom="11dp"
                android:hint="请输入"
                android:textColor="#ff565e6f"
                android:textSize="12sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:orientation="horizontal"
            android:background="@drawable/design_dialog_button_background"
            android:gravity="center"
            android:layout_marginTop="32dp"
            android:layout_width="match_parent"
            android:layout_height="52dp">

            <TextView
                android:id="@+id/tv_cancel"
                android:layout_weight="0.5"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:text="取消"
                android:textColor="#ff333c4f"
                android:textSize="16sp"
                />

            <TextView
                android:id="@+id/tv_confirm"
                android:background="#1A333C4F"
                android:layout_weight="0.5"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="确定"
                android:textColor="#ff333C4F"
                android:textSize="16sp"
                />
        </LinearLayout>


    </LinearLayout>
</layout>